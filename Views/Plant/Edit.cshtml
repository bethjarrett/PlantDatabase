@model PlantDatabase.Models.PlantDto

@{
    ViewBag.Title = "Edit " + @Model.plant_name;
}
<h2>&nbsp;&nbsp;Edit @Model.plant_name</h2>
<div class="form-field">
    <div class="table-pad">
        <form method="POST" name="PlantForm" action="/Plant/Update/@Model.plant_id" enctype="multipart/form-data">
            @* Pass through ID *@
            <div style="display:none;">
                <input type="text" name="plant_id" value="@Model.plant_id" />
            </div>
            <div class="form-group row">
                <label class="col-md-4 col-form-label">Name:</label>
                <div class="col-md-4">
                    <input type="text" name="plant_name" value="@Model.plant_name" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <label class="col-md-4 col-form-label">Water when soil is:</label>
                <div class="col-md-4">
                    <select name="plant_water" id="water" class="form-control">
                        @if (@Model.plant_water == 1)
                        {
                            <option value="1" selected>Almost Dry</option>
                            <option value="2">Mostly Dry</option>
                            <option value="3">Fully Dry</option>
                        }
                        else if (@Model.plant_water == 2)
                        {
                            <option value="1">Almost Dry</option>
                            <option value="2" selected>Mostly Dry</option>
                            <option value="3">Fully Dry</option>
                        }
                        else
                        {
                            <option value="1">Almost Dry</option>
                            <option value="2">Mostly Dry</option>
                            <option value="3" selected>Fully Dry</option>
                        }
                    </select>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-md-4 col-form-label">Humidity Preference:</label>
                <div class="col-md-4">
                    <select name="plant_humidity" id="humidity" class="form-control">
                        @if (@Model.plant_humidity == 1)
                        {
                            <option value=1 selected>High Humidity</option>
                            <option value=2>Medium Humidity</option>
                            <option value=3>Any</option>
                        }
                        else if (@Model.plant_humidity == 2)
                        {
                            <option value=1>High Humidity</option>
                            <option value=2 selected>Medium Humidity</option>
                            <option value=3>Any</option>
                        }
                        else
                        {
                            <option value=1>High Humidity</option>
                            <option value=2>Medium Humidity</option>
                            <option value=3 selected>Any</option>
                        }
                    </select>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-md-4 col-form-label">Light Needs:</label>
                <div class="col-md-4">
                    <select name="plant_light" id="light" value="@Model.plant_light" class="form-control">
                        @if (@Model.plant_light == 1)
                        {
                            <option value=1 selected>Bright</option>
                            <option value=2>Medium</option>
                            <option value=3>Low</option>
                        }
                        else if (@Model.plant_light == 2)
                        {
                            <option value=1>Bright</option>
                            <option value=2 selected>Medium</option>
                            <option value=3>Low</option>
                        }
                        else if (@Model.plant_light == 3)
                        {
                            <option value=1>Bright</option>
                            <option value=2>Medium</option>
                            <option value=3 selected>Low</option>
                        }
                    </select>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-md-4 col-form-label">Upload Picture:</label>
                <div class="col-md-4">
                    <input type="file" name="PlantPic" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-10">
                    <input type="submit" value="Update Plant" class="btn">&nbsp;&nbsp;
                    <a href="/Plant/Details/@Model.plant_id" class="btn">Cancel</a>
                </div>
            </div>
        </form>
    </div>
</div>
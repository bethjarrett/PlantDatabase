
@{
    ViewBag.Title = "New";
}

<h2>Add a New Plant</h2>

<form method="POST" name="PlantForm" action="/Plant/Create">
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">First Name:</label>
        <div class="col-sm-10">
            <input type="text" name="plant_name" class="form-control"/>
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Water when soil is:</label>
        <div class="col-sm-10">
            <select name="plant_water" id="water" class="form-control">
                <option value="1">Almost Dry</option>
                <option value="2">Mostly Dry</option>
                <option value="3">Fully Dry</option>
            </select>
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Humidity Preference:</label>
        <div class="col-sm-10">
            <select name="plant_humidity" id="humidity" class="form-control">
                <option value="1">High Humidity</option>
                <option value="2">Medium Humidity</option>
                <option value="3">Any</option>
            </select>
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-2 col-form-label" >Light Needs:</label>
        <div class="col-sm-10">
            <select name="plant_light" id="light" class="form-control">
                <option value="1">Bright</option>
                <option value="2">Medium</option>
                <option value="3">Low</option>
            </select>
        </div>
    </div>


    <div class="form-group row">
        <div class="col-sm-10">
            <input type="submit" value="Add Plant" class="btn btn-primary"/>
            <a href="/Plant/List">Cancel</a>
        </div></div>
</form> 
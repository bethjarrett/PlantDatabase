@model IEnumerable<PlantDatabase.Models.PlantDto>

@{
    ViewBag.Title = "New Watering";
}
<h2>&nbsp;&nbsp;New Watering</h2>
<div class="form-field">
    <div class="table-pad">
        <form method="POST" name="WaterForm" action="/Water_Date/Create">
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Plant:</label>
                <div class="col-sm-10">
                    <select name="plant_id" class="form-control">
                        @foreach (var plant in Model)
                        {
                            <option value="@plant.plant_id">@plant.plant_name</option>

                        }
                    </select>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Water Date:</label>
                <div class="col-sm-10">
                    <input type="date" name="water_day" class="form-control">
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-10">
                    <input type="submit" value="Add" class="btn">&nbsp;&nbsp;
                    <a href="/Water_Date/List" class="btn">Cancel</a>
                </div>
            </div>
        </form>
    </div>
</div>